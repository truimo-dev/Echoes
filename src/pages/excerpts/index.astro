---
import { getCollection } from 'astro:content'
import Layout from '@/layouts/MainLayout.astro'
import Excerpt from '@/components/excerpts/Excerpt.astro'

const list = await getCollection('excerpts')
---
<Layout title='Excerpts' description='Here are some excerpts.'>
    <div class="mx-auto max-w-3xl">
        <div class="mx-4">
            <p class="text-2xl font-bold">Excerpts</p>
        </div>
        <div class="select-none mx-4 mt-4">
            <div class="space-y-6">
                {list.map((it) => (
                    <Excerpt data={it.data} />
                ))}
            </div>
        </div>
    </div>
</Layout>
